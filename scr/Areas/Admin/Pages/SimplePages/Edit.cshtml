@page "{id:int?}"
@model PortfolioWebApp.Areas.Admin.Pages.SimplePages.EditModel
@{
    ViewData["Title"] = "Edit Simple Page";
}

<form id="editSimplePage" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Input.Title" class="col-sm-2 col-form-label">
            Title
        </label>
        <div class="col-sm-10">
            <input asp-for="Input.Title" class="form-control">
            <span asp-validation-for="Input.Title" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <label asp-for="Input.CustomUrl" class="col-sm-2 col-form-label">
            Custom Url
            <small class="form-text text-muted">Should not contain any slashes, works just as a custom name.</small>
        </label>
        <div class="col-sm-10">
            <input asp-for="Input.CustomUrl" class="form-control">
        </div>
        <span asp-validation-for="Input.CustomUrl" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Input.HTML" class="col-sm-2 col-form-label">
            Page HTML
            <small class="form-text text-muted">Raw html which will display your page content.</small>
        </label>
        <div class="col-sm-10">
            <textarea asp-for="Input.HTML" class="form-control" rows="25"></textarea>
        </div>
        <span asp-validation-for="Input.HTML" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

