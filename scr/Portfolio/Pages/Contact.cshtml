@page
@model PortfolioWebApp.Portfolio.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
}



@if (Model.SimplePage != null)
{
    @Html.Raw(Model.SimplePage.HTML);
}


<div class="container-fluid" style="width:80%">
    <h1>Contact</h1>
    <partial name="_StatusMessage" for="StatusMessage" />
    <form id="contact" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Input.Name">Name</label>
                <input asp-for="Input.Name" class="form-control" placeholder="Name">
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" class="form-control" placeholder="Email">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Input.Subject">Subject</label>
            <input asp-for="Input.Subject" class="form-control" placeholder="Subject">
            <span asp-validation-for="Input.Subject" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Message">Message</label>
            <textarea asp-for="Input.Message" class="form-control" rows="10" placeholder="Message"></textarea>
            <span asp-validation-for="Input.Message" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-outline-secondary">Send</button>
    </form>
</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}