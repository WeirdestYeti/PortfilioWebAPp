@page "{id:int?}"
@model PortfolioWebApp.Areas.Admin.Pages.NavigationEditor.EditModel
@{
    ViewData["Title"] = "Edit New Menu Item";
}

<form id="editNavigaiton" method="post">
    <partial name="_StatusMessage" for="StatusMessage" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Input.Id" />
    <div class="form-group row">
        <label asp-for="Input.Name" class="col-sm-2 col-form-label">
            Name
            <small class="form-text text-muted">Name of the page in navgation bar.</small>
        </label>
        <div class="col-sm-10">
            <input asp-for="Input.Name" class="form-control">
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <label asp-for="Input.Url" class="col-sm-2 col-form-label">
            Url
            <small class="form-text text-muted">Url to the page.</small>
        </label>
        <div class="col-sm-10">
            <input asp-for="Input.Url" class="form-control">
            <span asp-validation-for="Input.Url" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="/NavigationEditor/Index" asp-area="Admin" class="btn btn-info" role="button" aria-pressed="true">Back</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
