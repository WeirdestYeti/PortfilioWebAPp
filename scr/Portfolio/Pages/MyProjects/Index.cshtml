@page
@model PortfolioWebApp.Portfolio.Pages.MyProjects.IndexModel
@{
    ViewData["Title"] = "My Projects";
}



<div class="container-fluid">
    <div class="row">
        @for (int i = 0; i < Model.Projects.Count; i++)
        {
            <div class="col-md-4">
                <div class="card bg-dark mb-3 shadow-sm border-0">
                    @{
                        if (string.IsNullOrEmpty(Model.Projects[i].ThumbnailUrl) || string.IsNullOrEmpty(Model.Projects[i].ThumbnailUrl))
                        {
                            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail">
                                <title>Placeholder</title>
                                <rect width="100%" height="100%" fill="#55595c"></rect>
                                <text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text>
                            </svg>
                        }
                        else
                        {
                            <img src="@(Model.Projects[i].ThumbnailUrl)" class="card-img-top" alt="...">
                        }
                    }
                    <div class="card-body">
                        <h5 class="card-title">@(Model.Projects[i].Title)</h5>
                        <p class="card-text">@(Model.Projects[i].ShortDescription)</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/MyProjects/View/@(Model.Projects[i].Id + "-" + Model.Projects[i].Title)" role="button" class="btn btn-sm btn-outline-secondary text-white">View</a>
                            </div>
                            @if (Model.Projects[i].IsRepositoryPrivate)
                            {
                                <small class="text-danger">Private</small>
                            }
                            else
                            {
                                <small class="text-muted">Public</small>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>