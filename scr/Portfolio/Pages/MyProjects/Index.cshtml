@page
@model PortfolioWebApp.Portfolio.Pages.MyProjects.IndexModel
@{
    ViewData["Title"] = "My Projects";
}



<div class="container-fluid">
    <div class="row">
        @for (int i = 0; i < Model.Projects.Count; i++)
        {
            <div class="col-md-4">
                <div class="card bg-dark border-dark">
                    @{
                        if (string.IsNullOrEmpty(Model.Projects[i].ThumbnailUrl) || string.IsNullOrEmpty(Model.Projects[i].ThumbnailUrl))
                        {
                            <svg class="bd-placeholder-img bd-placeholder-img-lg img-fluid card-img-top" width="100%" height="250" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Responsive image">
                                <title>Placeholder</title>
                                <rect width="100%" height="100%" fill="#868e96"></rect>
                                <text x="50%" y="50%" fill="#dee2e6" dy=".3em">No Thumbnail</text>
                            </svg>
                        }
                        else
                        {
                            <img src="@(Model.Projects[i].ThumbnailUrl)" class="card-img-top" alt="...">
                        }
                    }

                    <div class="card-body">
                        <h5 class="card-title">@(Model.Projects[i].Title)</h5>
                        <p class="card-text">@(Model.Projects[i].ShortDescription)</p>
                        <a href="/MyProjects/View/@(Model.Projects[i].Id + "-" + Model.Projects[i].Title)" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>